{
  "name": "@the_platform/core",
  "description": "Core utils and services, with NO UI, with minimum dependencies and what can be shared between application modules",
  "version": "1.0.0",
  "main": "./src/index.ts",
  "scripts": {
    "test": "jest"
  },
  "jest": {
    "cacheDirectory": "../../../.cache",
    "collectCoverage": false,
    "testEnvironment": "jsdom",
    "verbose": true,
    "displayName": {
      "name": "THE PLATFORM",
      "color": "blue"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|pdf|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/frontend/__mocks__/file.ts",
      "\\.(css|sass)$": "identity-obj-proxy"
    }
  },
  "dependencies": {
    "clsx": "^1.1.1",
    "core-js": "^3.8.1",
    "i18next": "^19.8.4",
    "i18next-browser-languagedetector": "^6.0.1",
    "ky": "^0.25.1",
    "react": "^17.0.1",
    "react-i18next": "^11.8.3",
    "yup": "^0.32.8"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.12.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.12.1",
    "@babel/plugin-proposal-optional-chaining": "^7.12.7",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-function-name": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.10",
    "@babel/preset-react": "^7.12.10",
    "@babel/preset-typescript": "^7.12.7",
    "@babel/runtime": "^7.12.5",
    "@babel/runtime-corejs3": "^7.12.5",
    "@types/jest": "^26.0.19",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/yup": "^0.29.10",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "jest": "^26.6.3",
    "jest-babel": "^1.0.1",
    "regenerator-runtime": "^0.13.7",
    "typescript": "4.1.3"
  }
}
