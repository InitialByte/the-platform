{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "tsBuildInfoFile": ".cache/ts",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "importHelpers": false,
    "declaration": true,
    "incremental": true,
    "target": "esnext",
    "module": "esnext",
    // "listFiles": true,
    "jsx": "react-jsx",
    "outDir": "dist",
    "baseUrl": "./",
    "noEmit": true,
    "strict": true,
    // "types" : [
    //  "@material-ui-core",
    //  "@material-ui-styles"
    // ],
    "lib": [
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "ESNext",
      "DOM"
    ],
    "paths": {
      "@the_platform/react-web-desktop": ["src/react/web-desktop/src/index"],
      "@the_platform/module-auth": ["src/modules/auth/src/index"],
      "@the_platform/react-uikit": ["src/react/uikit/src/index"],
      "@the_platform/core": ["src/core/src/index"]
    }
  },
  "files": [
    "src/core/src/services/error-tracking/global.ts"
  ],
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts"
  ],
  "exclude": [
    "src/__mocks__",
    "src/storybook",
    "src/swagger",
    "src/smoke",
    "**/__snapshots__/*",
    "**/__tests__/*",
    "node_modules",
    ".yarn/**/*",
    "**/dist/*",
    "**/*.snap",
    "*test*",
    "*yarn/*"
  ]
}
