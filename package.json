{
  "name": "the_platform",
  "description": "The Platform. Scalable fullstack framework for configuring complex medium and large SPA projects.",
  "author": "Eugene Zlobin <creastar@gmail.com>",
  "version": "1.0.0",
  "license": "MIT",
  "repository": {
    "url": "git+https://github.com/InitialByte/the-platform.git",
    "type": "git"
  },
  "source": "./src/frontend/react/web-desktop/src/index.tsx",
  "main": "./dist/index.js",
  "types": "./src/frontend/@types/",
  "sideEffects": false,
  "private": true,
  "files": [
    "./dist"
  ],
  "//": "THIS IS WEB-APP SETTINGS",
  "config": {
    "devServer": {
      "host": "localhost",
      "port": "8008"
    },
    "apiProxyServer": {
      "//": "local, external, false",
      "type": "local",
      "protocol": "http",
      "host": "localhost",
      "port": "80"
    },
    "app": {
      "settings": {
        "hasServerTracking": true,
        "defaultLanguage": "en_us",
        "availableLanguages": [
          "en_us",
          "ru_ru"
        ]
      },
      "dependencies": {
        "backend": {
          "client": [
            "auth"
          ]
        },
        "frontend": {
          "client": [
            "auth"
          ],
          "admin": [
            "adminpanel"
          ]
        }
      }
    }
  },
  "workspaces": [
    "./src/backend/nodejs/rest/*",
    "./src/frontend/modules/*",
    "./src/frontend/react/*",
    "./src/frontend/*"
  ],
  "engines": {
    "node": ">= 12.13",
    "npm": ">= 5.6",
    "yarn": "^2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && yarn lint-staged"
    }
  },
  "changelog": {
    "labels": {
      "feature": "New Feature",
      "bug": "Bug Fix"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn lint --fix"
    ]
  },
  "jest": {
    "cacheDirectory": "./.cache",
    "collectCoverage": false,
    "verbose": true,
    "displayName": {
      "name": "THE PLATFORM",
      "color": "blue"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|pdf|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/frontend/__mocks__/file.ts",
      "\\.(css|sass)$": "identity-obj-proxy"
    }
  },
  "scripts": {
    "go": "cd ./configs && docker-compose up --build --remove-orphans",
    "storybook": "yarn workspace @the_platform/storybook start",
    "swagger": "yarn workspace @the_platform/swagger start",
    "apimock": "cross-env TZ=Asia/Novosibirsk yarn workspace @the_platform/apimock start",
    "smoke": "yarn workspace @the_platform/smoke start",
    "start": "cross-env MODE=development webpack-dev-server --progress --open --config ./configs/webpack/dev.js",
    "build": "cross-env MODE=production TZ=Asia/Novosibirsk webpack --progress --config ./configs/webpack/prod.js",
    "lint": "yarn eslint \"./src/frontend/@(core|modules|react)/**/*.@(ts|tsx)\" --ignore-pattern \"*.test.*\" --cache --cache-location ./.cache",
    "prettier": "prettier --write '**/*.{ts,tsx,scss}'",
    "tslint": "yarn run tsc --noEmitOnError",
    "check": "yarn tslint && yarn lint && yarn test",
    "prunecache": "rm -rf ./.cache/ && yarn cache clean",
    "upgrade": "yarn upgrade-interactive"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.10.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.11.0",
    "@babel/plugin-proposal-optional-chaining": "^7.11.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-function-name": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@babel/runtime": "^7.11.2",
    "@babel/runtime-corejs3": "^7.11.2",
    "@types/circular-dependency-plugin": "^5.0.1",
    "@types/i18next": "^13.0.0",
    "@types/jest": "^26.0.14",
    "@types/redux": "^3.6.31",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "@yarnpkg/pnpify": "^2.3.2",
    "autoprefixer": "^10.0.1",
    "babel-loader": "^8.1.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "cache-loader": "^4.1.0",
    "circular-dependency-plugin": "^5.2.0",
    "clean-webpack-plugin": "^3.0.0",
    "compression-webpack-plugin": "^6.0.3",
    "copy-webpack-plugin": "^6.2.1",
    "core-js": "^3.6.5",
    "cross-env": "^7.0.2",
    "css-loader": "^4.3.0",
    "enzyme": "^3.11.0",
    "eslint": "^7.11.0",
    "eslint-config-airbnb-typescript": "^11.0.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-optimize-regex": "^1.2.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.21.4",
    "eslint-plugin-react-hooks": "^4.1.2",
    "eslint-plugin-sonarjs": "^0.5.0",
    "html-webpack-plugin": "^4.5.0",
    "husky": "^4.3.0",
    "image-webpack-loader": "^7.0.1",
    "jest": "^26.5.3",
    "lint-staged": "^10.4.0",
    "pnp-webpack-plugin": "^1.6.4",
    "postcss": "^8.1.1",
    "postcss-js": "^3.0.1",
    "postcss-loader": "^4.0.4",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.0.2",
    "regenerator-runtime": "^0.13.7",
    "style-loader": "^2.0.0",
    "svg-inline-loader": "^0.8.2",
    "terser-webpack-plugin": "^4.2.3",
    "typescript": "^4.0.3",
    "url-loader": "^4.1.1",
    "webpack": "^4.44.2",
    "webpack-bundle-analyzer": "^3.9.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.2.0"
  },
  "resolutions": {
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@types/react-redux": "^7.1.9",
    "@types/react-router-dom": "^5.1.5"
  },
  "dependenciesMeta": {
    "@storybook/core": {
      "unplugged": true
    },
    "opn": {
      "unplugged": true
    }
  }
}
