{
  "name": "the_platform",
  "description": "The Platform. Scalable fullstack framework for configuring complex medium and large size SPA projects.",
  "author": "Eugene Zlobin <creastar@gmail.com>",
  "version": "1.0.0",
  "license": "MIT",
  "repository": {
    "url": "git+https://github.com/InitialByte/the-platform.git",
    "type": "git"
  },
  "source": "./src/frontend/react/web-desktop/src/index.tsx",
  "main": "./dist/index.js",
  "types": "./src/frontend/@types/",
  "sideEffects": false,
  "private": true,
  "files": [
    "./dist"
  ],
  "//": "THIS IS WEB-APP SETTINGS",
  "config": {
    "devServer": {
      "host": "localhost",
      "port": "8008"
    },
    "apiProxyServer": {
      "protocol": "http",
      "host": "localhost",
      "enabled": false,
      "port": "80"
    },
    "app": {
      "settings": {
        "hasServerTracking": true
      },
      "dependencies": {
        "backend": {
          "client": [
            "auth"
          ]
        },
        "frontend": {
          "client": [
            "auth",
            "register"
          ],
          "admin": [
            "authinternal",
            "adminpanel"
          ]
        }
      }
    }
  },
  "workspaces": [
    "./src/backend/nodejs/rest/auth",
    "./src/backend/nodejs/rest/user",
    "./src/backend/nodejs/rest/core",
    "./src/frontend/modules/*",
    "./src/frontend/react/*",
    "./src/frontend/*"
  ],
  "engines": {
    "node": ">= 12.13",
    "npm": ">= 5.6",
    "yarn": "^2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "echo 0"
    }
  },
  "changelog": {
    "labels": {
      "feature": "New Feature",
      "bug": "Bug Fix"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn check"
    ]
  },
  "jest": {
    "cacheDirectory": "./.cache",
    "collectCoverage": false,
    "verbose": true,
    "displayName": {
      "name": "THE PLATFORM",
      "color": "blue"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|pdf|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/frontend/__mocks__/file.ts",
      "\\.(css|sass)$": "identity-obj-proxy"
    }
  },
  "scripts": {
    "//": "             [ BACK + FRONT + INFRA ]            ",
    "go": "cd ./configs && docker-compose up --build --remove-orphans",
    "///": "                 [ MODULES ]                  ",
    "storybook": "yarn workspace @the_platform/storybook start",
    "swagger": "yarn workspace @the_platform/swagger start",
    "apimock": "yarn workspace @the_platform/apimock start",
    "smoke": "yarn workspace @the_platform/smoke start",
    "////": "            [ PROD, DEV BUILDS ]             ",
    "start": "webpack-dev-server --progress --open --config ./configs/webpack/dev.js",
    "build": "webpack --progress --config ./configs/webpack/prod.js",
    "/////": "             [ LINT, TEST ]              ",
    "lint": "yarn eslint \"./src/frontend/core/**/*.@(ts|tsx)\" --cache --cache-location ./.cache",
    "prettier": "prettier --write '**/*.{ts,tsx,css,scss}' --config ./configs/core/.prettierrc",
    "tslint": "yarn run tsc --noEmitOnError --pretty",
    "check": "yarn tslint && yarn lint && yarn test",
    "fixcode": "yarn prettier && yarn eslint --fix",
    "test": "lerna run test --stream",
    "//////": "              [ STUFF ]                 ",
    "prunecache": "rm -rf ./.cache/ && yarn cache clean",
    "bump:version": "lerna version --no-push",
    "upgrade": "yarn upgrade-interactive",
    "changelog": "yarn lerna-changelog"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.10.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.4",
    "@babel/plugin-proposal-optional-chaining": "^7.10.4",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-function-name": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@babel/runtime": "^7.10.5",
    "@babel/runtime-corejs3": "^7.10.5",
    "@types/jest": "^26.0.7",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "@yarnpkg/pnpify": "^2.1.0",
    "autoprefixer": "^9.8.5",
    "babel-loader": "^8.1.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "cache-loader": "^4.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "compression-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^6.0.3",
    "core-js": "^3.6.5",
    "css-loader": "^4.0.0",
    "enzyme": "^3.11.0",
    "eslint": "^7.5.0",
    "eslint-config-airbnb-typescript": "^9.0.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-optimize-regex": "^1.2.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "^4.0.8",
    "eslint-plugin-sonarjs": "^0.5.0",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "image-webpack-loader": "^6.0.0",
    "jest": "^26.1.0",
    "lerna": "^3.22.1",
    "lerna-changelog": "^1.0.1",
    "lint-staged": "^10.2.11",
    "postcss-js": "^2.0.3",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "regenerator-runtime": "^0.13.7",
    "style-loader": "^1.2.1",
    "svg-inline-loader": "^0.8.2",
    "terser-webpack-plugin": "^3.0.8",
    "typescript": "^3.9.7",
    "url-loader": "^4.1.0",
    "webpack": "^5.0.0-beta.22",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.0.9"
  },
  "dependenciesMeta": {
    "@storybook/core": {
      "unplugged": true
    },
    "opn": {
      "unplugged": true
    }
  }
}
